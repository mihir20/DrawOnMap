<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/optionFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:src="@drawable/ic_label_outline_black_24dp"
        map:fabSize="normal"
        android:layout_alignTop="@id/map"
        android:layout_alignRight="@id/map"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/lineFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:visibility="gone"
        android:src="@drawable/ic_timeline_black_24dp"
        map:fabSize="normal"
        android:layout_toLeftOf="@id/optionFab" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/polygonFab"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:src="@drawable/ic_polymer_black_24dp"
        map:fabSize="normal"
        android:layout_below="@id/optionFab"
        android:layout_alignRight="@id/map"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/saveFab"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:src="@drawable/ic_polymer_black_24dp"
        map:fabSize="normal"
        android:layout_alignLeft="@id/map"/>

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context="in.aeroconsultancy.drawonmap.MapsActivity" />


<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:src="@drawable/ic_my_location_black_24dp"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        map:fabSize="normal"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_alignBottom="@id/map"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/undoFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:src="@drawable/ic_undo_black_24dp"
        map:fabSize="normal"
        android:layout_alignBottom="@id/map"
        android:layout_alignRight="@id/map"/>

</RelativeLayout>
